<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    >

    <EditText
        android:id="@+id/cardNumberField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="number"
        android:hint="Credit Card Number"
        android:textColor="@color/white_text" >

        <requestFocus />
    </EditText>

    <Spinner
        android:id="@+id/cardmonthspinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:textColor="@color/white_text"
        android:layout_below="@+id/cardNumberField" />

    <Spinner
        android:id="@+id/cardyearspinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardNumberField"
        android:layout_marginTop="10dp"
        android:textColor="@color/white_text"
        android:layout_toRightOf="@id/cardmonthspinner" />

    <EditText
        android:id="@+id/cardCCVField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/cardmonthspinner"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="number"
        android:hint="CVC"
        android:textColor="@color/white_text" />

    <Button
        android:id="@+id/submitCardButton"
        android:background="@drawable/buttonlayout"
        android:layout_width="@dimen/bottombuttonwidth1_normal"
        android:layout_height="@dimen/bottombuttonheight1_normal"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black_text"
        android:textSize="@dimen/bottombuttontextsize1_normal"
        android:layout_below="@+id/cardCCVField"
        android:text="Submit" />

</RelativeLayout>
