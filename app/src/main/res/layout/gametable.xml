<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" >

        <ImageView
            android:id="@+id/awayLogo"
			android:layout_height="@dimen/gametableimagewidth_normal"
			android:layout_width="@dimen/gametableimageheight_normal"
			android:paddingLeft="2dp"
			android:paddingRight="2dp"
			android:paddingTop="2dp"
			android:paddingBottom="2dp"
			android:gravity="center" />

        <TextView
            android:id="@+id/awayName"
            android:layout_width="@dimen/gametablenamewidth_normal"
            android:textSize="@dimen/gametableteamname_normal"
            android:gravity="left"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/awayScore"
            android:layout_width="@dimen/gametablescorewidth_normal"
            android:textSize="@dimen/gametableteamname_normal"
            android:gravity="center"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/awayTime"
            android:layout_width="@dimen/gametablescorewidth_normal"
            android:textSize="@dimen/gametablescoresize_normal"
            android:gravity="center"
            android:textColor="#000000" />
    </TableRow>
    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp" >

        <ImageView
            android:id="@+id/homeLogo"
			android:layout_height="@dimen/gametableimagewidth_normal"
			android:layout_width="@dimen/gametableimageheight_normal"
			android:paddingLeft="2dp"
			android:paddingRight="2dp"
			android:paddingTop="2dp"
			android:paddingBottom="2dp"
			android:gravity="center" />

        <TextView
            android:id="@+id/homeName"
            android:layout_width="@dimen/gametablenamewidth_normal"
            android:textSize="@dimen/gametableteamname_normal"
            android:gravity="left"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/homeScore"
            android:layout_width="@dimen/gametablescorewidth_normal"
            android:textSize="@dimen/gametableteamname_normal"
            android:gravity="center"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/homeTime"
            android:layout_width="@dimen/gametablescorewidth_normal"
            android:textSize="@dimen/gametablescoresize_normal"
            android:gravity="center"
            android:textColor="#000000" />
    </TableRow>

</TableLayout>