<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="15dp"
 >
 
    <TableLayout
            android:id="@+id/rosterTable1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:stretchColumns="0,1">

            <TableRow 
    android:id="@+id/rosterRow1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:stretchColumns="0,1"
    android:layout_gravity="center_horizontal"
    >
    
                    <TextView
        android:id="@+id/homeRosterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HomeName"
        android:layout_gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceSmall"
         />

    <TextView
        android:id="@+id/awayRosterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AwayName"
        android:layout_gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceSmall" 
        />
    
            </TableRow>

            
        </TableLayout>



<ScrollView 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/rosterTable1" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TableLayout
            android:id="@+id/rosterTable"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" 
            android:stretchColumns="2,3">

            

            
        </TableLayout>

        <Button
            android:id="@+id/rosterEditButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Edit Rosters" />

    </LinearLayout>

</ScrollView>
</RelativeLayout>